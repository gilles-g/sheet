<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Stimulus Sheet Demo{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        
        {# Bootstrap CSS #}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
        
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            <style>
                body {
                    padding-top: 20px;
                    background-color: #f8f9fa;
                }
                .sheet-holder {
                    position: fixed;
                    top: 0;
                    right: 0;
                    bottom: 0;
                    left: 0;
                    pointer-events: none;
                    z-index: 1000;
                }
                .sheet-overlay {
                    position: fixed;
                    top: 0;
                    right: 0;
                    bottom: 0;
                    left: 0;
                    background: rgba(0, 0, 0, 0.5);
                    opacity: 0;
                    transition: opacity 0.3s;
                    pointer-events: auto;
                }
                .sheet-overlay.active {
                    opacity: 1;
                }
                .sheet {
                    position: fixed;
                    top: 0;
                    right: 0;
                    bottom: 0;
                    width: 500px;
                    max-width: 90%;
                    background: white;
                    box-shadow: -2px 0 8px rgba(0, 0, 0, 0.15);
                    transform: translateX(100%);
                    transition: transform 0.3s;
                    pointer-events: auto;
                    display: flex;
                    flex-direction: column;
                }
                .sheet.active {
                    transform: translateX(0);
                }
                .sheet-header {
                    padding: 1.5rem;
                    border-bottom: 1px solid #dee2e6;
                    display: flex;
                    justify-content: space-between;
                    align-items: center;
                }
                .sheet-header h2 {
                    margin: 0;
                    font-size: 1.5rem;
                }
                .sheet-scrollpane {
                    flex: 1;
                    overflow-y: auto;
                }
                .sheet-content {
                    padding: 1.5rem;
                }
            </style>
        {% endblock %}

        {% block javascripts %}
            {# Bootstrap JS #}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-light bg-light mb-4">
            <div class="container">
                <a class="navbar-brand" href="{{ path('app_home') }}">Stimulus Sheet Demo</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('user_list') }}">Users</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('recipe_list') }}">Recipes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('ingredient_list') }}">Ingredients</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <div class="container">
            {% block body %}{% endblock %}
        </div>
        
        {# Sheet container - required for stimulus-sheet #}
        <div class="sheet-holder" data-controller="sheet-list">
            <div data-sheet-list-target="container"></div>
        </div>
    </body>
</html>
