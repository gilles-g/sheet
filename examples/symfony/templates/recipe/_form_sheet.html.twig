<div class="sheet-wrapper">
    <div class="sheet-header">
        <h2>{{ recipe is defined ? 'Edit Recipe' : 'Create Recipe' }}</h2>
        <button data-action="click->sheet#close" class="btn-close" aria-label="Close"></button>
    </div>
    
    <div class="sheet-scrollpane">
        <div class="sheet-content">
            {{ form_start(form, {
                'attr': {
                    'data-turbo': 'true',
                    'data-turbo-frame': 'recipe-form-frame'
                }
            }) }}
            
            <turbo-frame id="recipe-form-frame">
                {% if form.vars.errors|length > 0 %}
                    <div class="alert alert-danger">
                        {{ form_errors(form) }}
                    </div>
                {% endif %}
                
                <div class="mb-3">
                    {{ form_row(form.name) }}
                </div>
                
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        {{ recipe is defined ? 'Update Recipe' : 'Create Recipe' }}
                    </button>
                    <button type="button" 
                            data-action="click->sheet#close" 
                            class="btn btn-secondary">
                        Cancel
                    </button>
                </div>
            </turbo-frame>
            
            {{ form_end(form) }}
        </div>
    </div>
</div>
