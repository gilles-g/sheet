{% extends 'base.html.twig' %}

{% block title %}Recipes - Stimulus Sheet Demo{% endblock %}

{% block body %}
<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Recipe Management</h1>
            <button 
                data-controller="sheet-opener"
                data-action="click->sheet-opener#open"
                data-sheet-opener-url-value="{{ path('recipe_create_sheet') }}"
                class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Recipe
            </button>
        </div>

        {% if recipes is empty %}
            <div class="alert alert-info">
                No recipes found. Click "Create New Recipe" to add your first recipe!
            </div>
        {% else %}
            <div class="card">
                <div class="card-body">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Ingredients</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for recipe in recipes %}
                            <tr>
                                <td>{{ recipe.id }}</td>
                                <td>
                                    <a href="{{ path('recipe_detail', {id: recipe.id}) }}">
                                        {{ recipe.name }}
                                    </a>
                                </td>
                                <td>{{ recipe.recipeIngredients|length }}</td>
                                <td>
                                    <a href="{{ path('recipe_detail', {id: recipe.id}) }}" class="btn btn-sm btn-info">
                                        View
                                    </a>
                                    <form method="post" action="{{ path('recipe_delete', {id: recipe.id}) }}" style="display: inline;">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ recipe.id) }}">
                                        <button type="submit" class="btn btn-sm btn-danger" 
                                                onclick="return confirm('Are you sure you want to delete this recipe?')">
                                            Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
