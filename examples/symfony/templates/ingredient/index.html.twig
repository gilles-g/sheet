{% extends 'base.html.twig' %}

{% block title %}Ingredients - Stimulus Sheet Demo{% endblock %}

{% block body %}
<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Ingredient Management</h1>
            <button 
                data-controller="sheet-opener"
                data-action="click->sheet-opener#open"
                data-sheet-opener-url-value="{{ path('ingredient_create_sheet') }}"
                class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Ingredient
            </button>
        </div>

        {% if ingredients is empty %}
            <div class="alert alert-info">
                No ingredients found. Click "Create New Ingredient" to add your first ingredient!
            </div>
        {% else %}
            <div class="card">
                <div class="card-body">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for ingredient in ingredients %}
                            <tr>
                                <td>{{ ingredient.id }}</td>
                                <td>{{ ingredient.name }}</td>
                                <td>{{ ingredient.description|default('â€”') }}</td>
                                <td>
                                    <button 
                                        data-controller="sheet-opener"
                                        data-action="click->sheet-opener#open"
                                        data-sheet-opener-url-value="{{ path('ingredient_edit_sheet', {id: ingredient.id}) }}"
                                        class="btn btn-sm btn-primary">
                                        Edit
                                    </button>
                                    <form method="post" action="{{ path('ingredient_delete', {id: ingredient.id}) }}" style="display: inline;">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ingredient.id) }}">
                                        <button type="submit" class="btn btn-sm btn-danger" 
                                                onclick="return confirm('Are you sure you want to delete this ingredient?')">
                                            Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
