{
  "compileOnSave": false,
  "compilerOptions": {
    "lib": ["es2017", "dom"],
    "target": "es2017",
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "removeComments": false,
    "noImplicitAny": false,
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist",
    "strict": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "dist"
  ]
}
