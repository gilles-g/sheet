{
  "name": "stimulus-sheet",
  "version": "2.0.0",
  "description": "Stimulus Sheet component - slide-in panels from the right",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rollup -c && npm run copy-css && npm run copy-to-docs",
    "copy-css": "cp src/sheet.css dist/sheet.css",
    "copy-to-docs": "cp dist/sheet.css docs/sheet.css && cp dist/index.esm.js docs/index.esm.js",
    "dev": "rollup -c -w",
    "test": "echo \"No tests yet\" && exit 0",
    "prepare": "npm run build"
  },
  "files": [
    "dist",
    "docs",
    "README.md",
    "MIGRATION.md",
    "BRANCHES.md",
    "SECURITY.md"
  ],
  "author": "Gilles Gauthier",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "rollup": "^3.29.5",
    "tslib": "^2.8.1",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "@hotwired/stimulus": "^3.0.0"
  },
  "directories": {
    "lib": "dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gilles-g/sheet"
  },
  "homepage": "https://github.com/gilles-g/sheet#readme",
  "keywords": [
    "stimulus",
    "sheet",
    "drawer",
    "panel",
    "slide-in"
  ],
  "dependencies": {
    "core-js": "^3.46.0"
  }
}
